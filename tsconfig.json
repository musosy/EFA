{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2020"],
        "sourceMap": true,
        "module": "commonjs",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "exclude": ["coverage", "test", "babel.config.js", "dist"]
}