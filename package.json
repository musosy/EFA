{
  "name": "efa",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start:dist": "npm run build && node dist/server.js",
    "start:dev": "npx prisma db push && ts-node-dev --rs --no-notify --respawn --exit-child -r tsconfig-paths/register --transpile-only src/server",
    "start:test": "dotenv -c test -- npx prisma db push && dotenv -c test -- ts-node-dev --rs --no-notify --respawn --exit-child -r tsconfig-paths/register --transpile-only src/server",
    "start:prod": "docker compose up --build",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "npx prisma migrate dev",
    "lint": "lint-staged",
    "test": "dotenv -c test -- npx prisma db push && dotenv -c test -- npx jest --runInBand --color",
    "test:cov": "dotenv -c test -- npx prisma db push && dotenv -c test -- npx jest --runInBand --coverage --color"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/types": "^29.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^29.4.3",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "chalk": "4.1.2",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.0.0",
    "express": "^4.18.2",
    "neverthrow": "^6.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/eslint --max-warnings=0 --fix",
      "pretty-quick"
    ]
  },
  "jest": {
    "verbose": true,
    "coverageDirectory": "coverage",
    "setupFiles": [
        "<rootDir>/.env.test"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/test/",
        "<rootDir>/src/config/",
        "<rootDir>/src/logger/",
        "<rootDir>/src/common/",
        "<rootDir>/src/api/*/*.interface.ts",
        "<rootDir>/src/api/*/*.error.ts"
    ]
  }
}
